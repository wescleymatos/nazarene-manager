<%- include('../../partials/header.ejs'); %>
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div id="toolbar" class="">
                <div class="btn-group" role="group">
                    <a href="/admin/users/add" class="btn btn-default">
                        <i class="fa fa-plus"></i>
                    </a>
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-cog"></i>
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#">Exportar Excel</a></li>
                        <li><a href="#">Exportar PDF</a></li>
                    </ul>
                </div>
            </div>
            <div class="box-body table-responsive">
                <table id="table-list" data-controller="admin/users/edit" class="table table-striped"
                       data-toggle="table"
                       data-locale="pt-BR"
                       data-pagination="true"
                       data-url="/admin/users/list"
                       data-search="true"
                       data-page-list="[7, 10, 25, 50, 100]"
                       data-id-field="id"
                       data-page-size="7"
                       data-flat="false"
                       data-detail-view="false"
                       data-toolbar="#toolbar">
                    <thead>
                        <tr>
                            <th data-field="check" data-checkbox="true"></th>
                            <th data-field="id">ID</th>
                            <th data-field="name">Nome</th>
                            <th data-field="email">Email</th>
                            <th data-formatter="parseBoolean" data-field="active">Ativo</th>
                            <th data-width="120px" data-align="center" data-formatter="actionsFormatter" data-events="actionsEvents"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer'); %>
