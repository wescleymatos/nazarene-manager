<% include header %>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Nova operação</h3>
                </div>
                <div class="panel-body">
                    <form method="GET">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="valor-inicial">Valor inicial</label>
                                    <input type="text" class="form-control" name="valorInicial" id="valor-inicial">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="taxa">Taxa a.m.</label>
                                    <input type="text" class="form-control" id="taxa" name="taxa">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="tempo">Quantos meses</label>
                                    <input type="text" class="form-control" id="tempo" name="tempo">
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">Calcular</button>
                    </form>
                    <% if(resultado.calculado) { %>
                        <br>
                        <div class="alert alert-info" role="alert">
                            Resultado: <strong>R$ <%= resultado.total.toFixed(2) %></strong>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Evolução</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-condensed">
                        <thead>
                            <tr>
                                <th style="width: 50px;">Mês</th>
                                <th>Valor</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% resultado.evolucao.forEach((item) => { %>
                                <tr>
                                    <td><%= item.mes %></td>
                                    <td>R$  <%= item.juros.toFixed(2) %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
<% include footer %>
